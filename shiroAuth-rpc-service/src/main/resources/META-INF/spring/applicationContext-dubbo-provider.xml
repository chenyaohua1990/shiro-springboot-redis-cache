<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="auth-provider"/>

    <dubbo:registry address="zookeeper://zkserver:2181" check="false"/>

    <dubbo:protocol name="dubbo" port="20881"/>


    <!-- 系统 -->
    <dubbo:service interface="com.platform.api.auth.service.RoleService" ref="roleService" timeout="10000"/>
    <dubbo:service interface="com.platform.api.auth.service.AuthorizationService" ref="authorizationService"/>
    <dubbo:service interface="com.platform.api.auth.service.OrganizationService" ref="organizationService" timeout="10000"/>
    <dubbo:service interface="com.platform.api.auth.service.RedisService" ref="redisService" timeout="10000"/>
    <dubbo:service interface="com.platform.api.auth.service.AppService" ref="appService" timeout="10000"/>
    <dubbo:service interface="com.platform.api.auth.service.ResourceService" ref="resourceService" timeout="10000"/>
    <dubbo:service interface="com.platform.api.auth.service.UserService" ref="userService" timeout="10000"/>


</beans>