<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <dubbo:application name="${zookeeper.name}"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${zookeeper.url}"
                    file="${user.dir}/dubbo-registry/dubbo-registry.properties"/>
    <!-- 要暴露的服务接口 -->
    <dubbo:provider retries="0" delay="-1" timeout="50000" port="${dubbo.port}"/>


    <!-- 系统 -->
    <dubbo:service interface="com.babysky.management.api.auth.service.api.MstRollBaseService" ref="mstRollBaseService"/>
    <dubbo:service interface="com.babysky.management.api.auth.service.api.MstInterUserRollService"
                   ref="mstInterUserRollService"/>
    <dubbo:service interface="com.babysky.management.api.auth.service.api.CfgSysResoService" ref="cfgSysResoService"/>
    <dubbo:service interface="com.babysky.management.api.auth.service.api.MstInterUserBaseService"
                   ref="mstInterUserBaseService"/>
    <dubbo:service interface="com.babysky.management.api.auth.service.api.MstInterUserSubsyService"
                   ref="mstInterUserSubsyService"/>





</beans>